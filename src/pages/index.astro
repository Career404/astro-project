import '../styles/global.css'

let string = 'This is a string';
let toggle = true;
let intervalId = setInterval(changeString, 4000);

function changeString() {
  if (toggle) {
    string = 'This is another string';
    toggle = false;
  } else {
    string = 'This is a string';
    toggle = true;
  }
}
setTimeout(() => {
  clearInterval(intervalId);
}, 60000);
